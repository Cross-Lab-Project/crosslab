{
    "python.defaultInterpreterPath": "venv/bin/python",
    "python.formatting.provider": "none",
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        },
    },
    "isort.args": [
        "--profile",
        "black"
    ],
    "files.exclude": {
        //begin generated
        "**/app": true,
        "**/build": true,
        "**/*.egg-info": true,
        "**/lib": true,
        "**/.mypy_cache": true,
        "**/node_modules": true,
        "**/.packages": true,
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/.tox": true,
        "**/venv": true,
        //end generated
    },
    "files.watcherExclude": {
        //begin generated
        "**/app": true,
        "**/build": true,
        "**/dist": true,
        "**/*.egg-info": true,
        "**/lib": true,
        "**/.mypy_cache": true,
        "**/node_modules": true,
        "**/.packages": true,
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/.tox": true,
        "**/venv": true,
        //end generated
    },
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.exclude": [
        ".tox",
        "dist"
    ]
}
