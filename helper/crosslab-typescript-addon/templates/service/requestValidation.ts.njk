    {% endif -%}
    if (!validate{{ operation.name | cap }}RequestBody(body)) {
        (validate{{ operation.name | cap }}Input as any).errors = (validate{{ operation.name | cap }}RequestBody as any).errors
        return false
    }

    {% endif -%}

    return true
}

