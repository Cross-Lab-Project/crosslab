        "type": "object",
        "properties": {
          "username": {
            "description": "Username of the user.",
            "type": "string"
          },
          "password": {
            "description": "Password of the user.",
            "type": "string"
          }
        },
        "required": [
          "username",
          "password"
        ]
      },
