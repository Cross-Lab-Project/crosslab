{
  "name": "@crosslab/service-auth",
  "license": "UNLICENSED",
  "author": "Johannes Nau",
  "bin": {
    "crosslab-auth-service": "./app/index.js"
  },
  "files": [
    "app"
  ],
  "scripts": {
    "openapi-lint": "npx --yes @redocly/cli lint ./api/openapi.yml",
    "openapi-bundle": "npx --yes @redocly/cli bundle ./api/openapi.yml --output dist/openapi.json",
    "watch-openapi": "npx --yes chokidar-cli 'api/**/*.yml' -c 'npm run openapi-bundle'",
    "watch-rapidoc": "npx --yes browser-sync start --server --startPath 'api/rapidoc.html' --files 'dist/openapi.json'",
    "build:generate": "npx openapi-codegen -i ./dist/openapi.json -t ./src -p @cross-lab-project/codegen-typescript-addon:preset:service -o ./src && npx prettier --write ./src",
    "build:compile": "tsc --project tsconfig.build.json",
    "build": "npm run build:generate && npm run build:compile",
    "format": "npx prettier . --write",
    "start": "node app/index.js",
    "dev": "npx nodemon src/index.ts",
    "lint": "eslint .",
    "test": "mocha --require ts-node/register test/**/*.spec.ts"
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSameLine": true,
    "bracketSpacing": false,
    "printWidth": 90,
    "singleQuote": false,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "overrides": [
      {
        "files": [
          "*.ts"
        ],
        "rules": {
          "max-len": [
            "error",
            {
              "code": 90
            }
          ],
          "no-shadow": "off",
          "no-undef": "off",
          "no-unused-vars": "off",
          "@typescript-eslint/no-shadow": [
            "error"
          ],
          "@typescript-eslint/no-unused-vars": [
            "warn",
            {
              "argsIgnorePattern": "^_",
              "varsIgnorePattern": "^_",
              "caughtErrorsIgnorePattern": "^_"
            }
          ]
        },
        "ecmaFeatures": {
          "jsx": false
        }
      }
    ],
    "ignorePatterns": [
      "src/generated/**/*",
      "src/database/migrations/**/*",
      "test/generated/**/*",
      "dist/**/*",
      "lib/**/*",
      "app/**/*",
      "docs/**/*",
      "http-dist/**/*",
      "/*.js"
    ],
    "root": true
  },
  "dependencies": {
    "@cross-lab-project/api-client": "file:../../clients/api/js",
    "@crosslab/service-common": "file:../common",
    "ajv-formats": "^2.1.1",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.1",
    "jose": "^4.10.0",
    "ldapts": "^4.1.0",
    "mysql": "^2.18.1",
    "node-fetch": "^2.6.7",
    "sqlite3": "^5.1.6",
    "typeorm": "^0.3.15",
    "winston": "^3.8.1"
  },
  "devDependencies": {
    "@cross-lab-project/codegen-typescript-addon": "file:../../helper/crosslab-typescript-addon",
    "@cross-lab-project/openapi-codegen": "file:../../helper/openapi-codegeneration",
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.13",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "@types/node-fetch": "^2.6.1",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "chai": "^4.3.7",
    "chai-http": "^4.4.0",
    "env-cmd": "^10.1.0",
    "eslint": "^8.34.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "prettier": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "dockerName": "auth-service"
}
