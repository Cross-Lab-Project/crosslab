{
    "name": "@crosslab/service-auth",
    "dockerName": "auth-service",
    "bin": {
        "crosslab-auth-service": "./app/index.js"
    },
    "files": [
        "app"
    ],
    "scripts": {
        "openapi-lint": "npx --yes @redocly/cli lint ./api/openapi.yml",
        "openapi-bundle": "npx --yes @redocly/cli bundle ./api/openapi.yml --output dist/openapi.json",
        "watch-openapi": "npx --yes chokidar-cli 'api/**/*.yml' -c 'npm run openapi-bundle'",
        "watch-rapidoc": "npx --yes browser-sync start --server --startPath 'api/rapidoc.html' --files 'dist/openapi.json'",
        "build:generate": "npx openapi-codegen -i ./dist/openapi.json -t ./template -p @cross-lab-project/codegen-typescript-addon:preset:service -o ./src/generated && npx prettier --write ./src/generated",
        "build:compile": "tsc --project tsconfig.build.json",
        "build": "npm-run-all build:*",
        "start": "node app/index.js",
        "dev": "env-cmd -e development npx nodemon src/index.ts",
        "lint": "eslint ."
    },
    "author": "Johannes Nau",
    "license": "UNLICENSED",
    "devDependencies": {
        "@apidevtools/swagger-parser": "^10.1.0",
        "@babel/register": "^7.18.9",
        "@cross-lab-project/codegen-typescript-addon": "file:../../helper/crosslab-typescript-addon",
        "@cross-lab-project/openapi-codegen": "file:../../helper/openapi-codegeneration",
        "@trivago/prettier-plugin-sort-imports": "^4.0.0",
        "@types/bcrypt": "^5.0.0",
        "@types/bcryptjs": "^2.4.2",
        "@types/body-parser": "^1.19.2",
        "@types/cookie-parser": "^1.4.3",
        "@types/express": "^4.17.13",
        "@types/json-schema-faker": "^0.5.1",
        "@types/mocha": "^10.0.1",
        "@types/node": "^18.11.18",
        "@types/node-fetch": "^2.6.1",
        "@types/rewire": "^2.5.28",
        "@types/seedrandom": "^3.0.4",
        "@types/sinon": "^10.0.13",
        "@types/supertest": "^2.0.12",
        "@types/ws": "^8.5.3",
        "@typescript-eslint/eslint-plugin": "^5.51.0",
        "@typescript-eslint/parser": "^5.51.0",
        "env-cmd": "^10.1.0",
        "eslint": "^8.34.0",
        "json-schema-faker": "^0.5.0-rcv.46",
        "mocha": "^10.2.0",
        "mocha-suppress-logs": "^0.3.1",
        "nodemon": "^2.0.19",
        "npm-run-all": "^4.1.5",
        "nyc": "^15.1.0",
        "openapi-types": "^12.0.0",
        "prettier": "^2.7.1",
        "randexp": "^0.5.3",
        "rewire": "^6.0.0",
        "seedrandom": "^3.0.5",
        "sinon": "^15.0.1",
        "supertest": "^6.3.3",
        "ts-mocha": "^10.0.0",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.5"
    },
    "dependencies": {
        "@cross-lab-project/api-client": "file:../../clients/api/js",
        "@crosslab/service-common": "file:../common",
        "ajv-formats": "^2.1.1",
        "bcrypt": "^5.1.0",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.20.0",
        "cookie-parser": "^1.4.6",
        "express": "^4.18.1",
        "jose": "^4.10.0",
        "ldapts": "^4.1.0",
        "mysql": "^2.18.1",
        "node-fetch": "^2.6.7",
        "sqlite3": "^5.1.6",
        "typeorm": "^0.3.15",
        "winston": "^3.8.1",
        "ws": "^8.8.0"
    }
}
