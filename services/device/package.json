{
    "name": "@crosslab/service-device",
    "version": "0.0.1",
    "description": "",
    "main": "index.js",
    "scripts": {
        "openapi-lint": "npx @redocly/openapi-cli lint ./api/openapi.yml",
        "openapi-bundle": "npx @redocly/openapi-cli bundle ./api/openapi.yml --output dist/openapi.json",
        "watch-openapi": "npx chokidar-cli 'api/**/*.yml' -c 'npm run openapi-bundle'",
        "watch-rapidoc": "npx browser-sync start --server --startPath 'api/rapidoc.html' --files 'dist/openapi.json'",
        "build-generate-code": "npx openapi-codegen -i dist/openapi.json -p @cross-lab-project/codegen-typescript-addon:preset:service -o src/generated",
        "build-compile": "tsc",
        "build": "npm run build-generate-code && npm run build-compile",
        "start": "node dist/index.js",
        "dev": "npx nodemon src/index.ts",
        "format": "npx prettier src --write"
    },
    "author": "Johannes Nau",
    "license": "UNLICENSED",
    "devDependencies": {
        "@cross-lab-project/openapi-codegen": "^0.1.0",
        "@cross-lab-project/codegen-typescript-addon": "^0.0.5", 
        "@types/body-parser": "^1.19.2",
        "@types/express": "^4.17.13",
        "@types/node": "^18.0.3",
        "@types/node-fetch": "^2.6.1",
        "@types/ws": "^8.5.3",
        "nodemon": "^2.0.19",
        "ts-node": "^10.9.1",
        "typescript": "^4.7.4",
        "prettier": "^2.7.1"
    },
    "dependencies": {
        "@cross-lab-project/api-client": "^0.1.0",
        "ajv-formats": "^2.1.1",
        "body-parser": "^1.20.0",
        "express": "^4.18.1",
        "jose": "^4.10.0",
        "mysql": "^2.18.1",
        "node-fetch": "^2.6.7",
        "sqlite3": "^5.0.8",
        "typeorm": "^0.3.6",
        "ws": "^8.8.0"
    }
}
