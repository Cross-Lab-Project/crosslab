              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/peerconnection"
                }
              }
            }
          }
        },
        "callbacks": {
          "closed": {
            "{$request.query.closedUrl}": {
              "post": {
                "requestBody": {
                  "description": "test",
                  "content": {
                    "application/json": {
                      "schema": {
                        "type": "object",
                        "properties": {
                          "callbackType": {
                            "type": "string",
                            "enum": [
                              "event"
                            ]
                          },
                          "eventType": {
                            "type": "string",
                            "enum": [
                              "peerconnection-closed"
                            ]
                          },
                          "peerconnection": {
                            "$ref": "#/components/schemas/peerconnection"
                          }
                        }
                      }
                    }
                  }
                },
                "responses": {
                  "201": {
                    "description": "The event was successfully processed."
                  }
                }
              }
            }
          }
        }
      }
    },
