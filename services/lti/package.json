{
  "name": "@crosslab/lti",
  "dockerName": "lti",
  "author": "Johannes Nau",
  "license": "UNLICENSED",
  "type": "module",
  "bin": {
    "crosslab-lti-service": "./app/index.js"
  },
  "files": [
    "app"
  ],
  "scripts": {
    "lint": "eslint .",
    "build": "npm run build:generate && npm run build:compile",
    "build:compile": "tsc --project tsconfig.json",
    "build:generate": "npm run build:generate:authentication && npm run build:generate:experiment",
    "build:generate:authentication": "npx openapi-codegen -i ../auth/dist/openapi.json -t ./api_client_template -o ./src/clients/authentication",
    "build:generate:experiment": "npx openapi-codegen -i ../experiment/dist/openapi.json -t ./api_client_template -o ./src/clients/experiment",
    "dev": "tsc-watch --onSuccess 'node --inspect=9009 ./app/index.js'",
    "test": "mocha --require ts-node/register test/**/*.spec.ts"
  },
  "devDependencies": {
    "@cross-lab-project/openapi-codegen": "file:../../helper/openapi-codegeneration",
    "@types/cookie-parser": "^1.4.4",
    "@types/express": "^4.17.17",
    "@types/node-fetch": "^2.6.4",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@crosslab/service-common": "file:../common",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "jose": "^4.14.4",
    "node-fetch": "^3.3.2",
    "openid-client": "^5.4.3",
    "sqlite3": "^5.1.6",
    "typeorm": "^0.3.17"
  }
}
